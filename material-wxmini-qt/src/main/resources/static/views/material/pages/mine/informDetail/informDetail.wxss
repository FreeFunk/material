/* 通告点进去的界面 */

/* 导入底部导航栏的样式 */
@import "/pages/template/template.wxss";

/* 白色背景的外层框 */
.card {
    width: 728rpx;
    margin-top: 20rpx;
    margin-left: 11rpx;
    padding-top: 30rpx;
    padding-bottom: 1rpx;
    margin-right: 11rpx;
    min-height: 100rpx;
    border-radius: 3rpx;
    margin-bottom:100rpx;
}

/* 标题 */
.title {
    margin-left: 14rpx;
    margin-right: 14rpx;
    padding-left: 1rpx;
    margin-bottom: 60rpx;
}

/* 标题图标 */
.title view {
    text-align: center;
    font-size: 40rpx;
    color: black;
}


/* 主要内容 */
.content {
    margin-top: 32rpx;
    font-size: 26rpx;
    margin-left: 17rpx;
    margin-right: 16rpx;
    line-height: 48rpx;
    text-indent: 50rpx;
}

/* 视频的外层 */
.imageDiv {
    margin: 30rpx 0;
    width: 100%;
    /* display: flex;
    justify-content: center; */
}

/* 时间和作者 */
.timeAndAuthor {
    margin-top: 50rpx;
    margin-bottom: 30rpx;
    height: 100rpx;
}

.timeAndAuthor view {
    text-align: right;
    margin-right: 50rpx;
    margin-top: 20rpx;
    color: #999999;
    font-size: 24rpx;
}