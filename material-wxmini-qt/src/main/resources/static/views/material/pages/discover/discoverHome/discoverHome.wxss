/* 搜索框 */

/* 导入底部导航栏的样式 */
@import "/pages/template/template.wxss";
@import "/pages/mine/mine.wxss";

.search_border_bottom {
    border-bottom: 1px solid #f4f4f4;
    height: 79rpx;
}

/* 瀑布流的外边框 */
.scrollDiv {
    position: absolute;
    top: 110rpx;
    margin-left: 9rpx;
}

page {
    height: 100%;
}

.scroll {
    flex: 1;
    overflow: scroll;
    padding-bottom: 100rpx;
}

.con {
    height: 100%;
    display: flex;
    flex-direction: column;
}


/* 所有标签 */
.allTags {
    margin-top: 58rpx;
}

/* 热门推荐 标题部分 */
.allTags .title {
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 24rpx;
}

/* 热门推荐 标题部分 图标 */
.allTags .title image {
    width: 8rpx;
    height: 30rpx;
}

/* 热门推荐 标题部分 文字 */
.allTags .title text {
    font-size: 26rpx;
    color: #000000;
    margin-left: 30rpx;
}

/* 热门推荐 内容 */
.allTags .content {
    margin: 36rpx 30rpx 0 24rpx;
}

/* 内容的单个小标签 */
.content view {
    background-color: #f5f5f5;
    color: #999999;
    padding: 25rpx;
    margin-right: 27rpx;
    height: 60rpx;
    margin-bottom: 43rpx;
    font-size: 20rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 24rpx;
}

/* 取消 */
.cancel {
    height: 64rpx;
    margin-right: 30rpx;
    align-items: center;
    line-height: 64rpx;
}

/* 取消 文字 */
.cancel text {
    font-size: 24rpx;
}