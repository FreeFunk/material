/* 发现 - 搜索 */

/* 导入底部导航栏的样式 */
@import "/pages/template/template.wxss";

page {
    background-color: white;
}

/* 搜索框 底边线 */
.search {
    border-bottom: 1px solid #edecec;
}

/* 取消 */
.cancel {
    height: 64rpx;
    margin-right: 30rpx;
    align-items: center;
    line-height: 64rpx;
}

/* 取消 文字 */
.cancel text {
    font-size: 24rpx;
}

/* 所有标签 */
.allTags {
    margin-top: 58rpx;
}

/* 热门推荐 标题部分 */
.allTags .title {
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 24rpx;
}

/* 热门推荐 标题部分 图标 */
.allTags .title image {
    width: 8rpx;
    height: 30rpx;
}

/* 热门推荐 标题部分 文字 */
.allTags .title text {
    font-size: 26rpx;
    color: #000000;
    margin-left: 30rpx;
}

/* 热门推荐 内容 */
.allTags .content {
    margin: 36rpx 30rpx 36rpx 24rpx;
}

/* 内容的单个小标签 */
.content view {
    background-color: #f5f5f5;
    color: #999999;
    padding: 25rpx;
    margin-right: 27rpx;
    height: 60rpx;
    margin-bottom: 43rpx;
    font-size: 20rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 24rpx;
}

/* 输入搜索时候的暂无数据; */
.search_nodata {
    text-align: center;
    font-size: 24rpx;
    color: #999999;
    height: 70rpx;
    line-height: 50rpx;
    text-align: center;
}

/* 搜索的显示框 */
.search_dialog {
    min-height: 50rpx;
    border: 1px solid #f5f5f5;
    padding-bottom: 0;
}