/**app.wxss**/

/**引入colorUi的css**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

/* 顶部的标签栏 */

.headerTags {
    background-color: white;
    width: 100%;
    height: 78rpx;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    position: fixed;
    top: 0;
    z-index: 99999;
}

/* 顶部标签  */
.headerTags .tag {
    background-color: #f5f5f5;
    padding: 25rpx;
    margin-right: 20rpx;
    height: 51rpx;
    margin-left: 17rpx;
    margin-bottom: 17rpx;
    margin-top: 10rpx;
    font-size: 23rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 22rpx;
}

/* 顶部标签选中 */
.tagSelected {
    background-color: #bbbbbb;
    padding: 25rpx;
    margin-right: 20rpx;
    height: 51rpx;
    color: white;
    margin-left: 17rpx;
    margin-bottom: 17rpx;
    margin-top: 10rpx;
    font-size: 23rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 22rpx;
    border: 1rpx solid #f1f1f1;
}

/* 顶部标签栏 - 全部按钮 */
.headerTags .allTagsBtn {
    float: right;
    background-color: white;
    width: 137rpx;
    height: 78rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    right: 0;
    top: 0;
    font-size: 22rpx;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
}

/* 隐藏的标签 */

.allHideTags {
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    position: fixed;
    top: 78rpx;
    width: 100%;
    padding-left: 4%;
    z-index: 9999999;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.hideTags {
    background-color: #f5f5f5;
    padding: 10rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
    font-size: 20rpx;
    margin-right: 4%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    min-width: 100rpx;
    min-width: 20%;
    text-align: center;
    margin-top: 20rpx;
}

.hideTags_selected {
    background-color: #e1e1e1;
    padding: 10rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
    font-size: 20rpx;
    margin-right: 4%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    min-width: 100rpx;
    min-width: 20%;
    text-align: center;
    margin-top: 20rpx;
}

/* 顶部标签栏 - 全部标签div */
.allTagsDiv {
    position: fixed;
    top: 78rpx;
    width: 100%;
    z-index: 9999999
}

/* 自定义弹窗 */
.customeDialog {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.36);
    z-index: 99999;
}